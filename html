    <audio id="bgTrack" loop>
        <source src="high.mp3" type="audio/mpeg">
    </audio>

    <script>
        const symbols = ['♠', '♥', '♣', '♦'];
        const canvas = document.getElementById('canvas-wonderland');
        const ctx = canvas.getContext('2d');
        let particles = [];

        function resize() { canvas.width = window.innerWidth; canvas.height = window.innerHeight; }
        window.addEventListener('resize', resize);
        resize();

        // Partículas ambientales de fondo
        class Particle {
            constructor() { this.reset(); }
            reset() {
                this.x = Math.random() * canvas.width;
                this.y = -50;
                this.size = Math.random() * 15 + 10;
                this.speedY = Math.random() * 0.8 + 0.2;
                this.symbol = symbols[Math.floor(Math.random() * symbols.length)];
                this.alpha = Math.random() * 0.1 + 0.05;
                this.rotation = Math.random() * Math.PI * 2;
            }
            update() {
                this.y += this.speedY;
                if (this.y > canvas.height) this.reset();
            }
            draw() {
                ctx.save();
                ctx.translate(this.x, this.y);
                ctx.rotate(this.rotation);
                ctx.fillStyle = `rgba(149, 117, 205, ${this.alpha})`;
                ctx.font = `${this.size}px serif`;
                ctx.fillText(this.symbol, 0, 0);
                ctx.restore();
            }
        }

        for (let i = 0; i < 20; i++) particles.push(new Particle());
        function animate() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            particles.forEach(p => { p.update(); p.draw(); });
            requestAnimationFrame(animate);
        }
        animate();

        // --- LÓGICA DEL BOTÓN EVASIVO CORREGIDA ---
        const declineBtn = document.getElementById('declineBtn');
        
        declineBtn.addEventListener('mouseover', function() {
            const rect = this.getBoundingClientRect();
            
            // Explosión donde estaba
            createExplosion(rect.left + rect.width/2, rect.top + rect.height/2, 10);

            // Desaparecer y saltar
            this.style.opacity = '0';
            this.style.transform = 'scale(0)';

            setTimeout(() => {
                const margin = 100;
                const newX = Math.random() * (window.innerWidth - rect.width - margin) + margin/2;
                const newY = Math.random() * (window.innerHeight - rect.height - margin) + margin/2;

                this.style.position = 'fixed';
                this.style.left = `${newX}px`;
                this.style.top = `${newY}px`;
                this.style.opacity = '1';
                this.style.transform = `scale(1) rotate(${(Math.random() - 0.5) * 20}deg)`;
                
                // Explosión donde aparece
                createExplosion(newX + rect.width/2, newY + rect.height/2, 8);
            }, 150);
        });

        // --- LÓGICA DE ACEPTAR ---
        document.getElementById('acceptBtn').addEventListener('click', () => {
            const contract = document.getElementById('contract');
            const finalScreen = document.getElementById('final-screen');
            const rect = contract.getBoundingClientRect();

            createExplosion(rect.left + rect.width/2, rect.top + rect.height/2, 40);
            
            contract.style.opacity = '0';
            contract.style.transform = 'scale(0.8) translateY(-20px)';
            
            setTimeout(() => {
                contract.style.display = 'none';
                finalScreen.style.opacity = '1';
                finalScreen.style.pointerEvents = 'auto';
                createExplosion(window.innerWidth/2, window.innerHeight/2, 50);
            }, 800);
        });

        function createExplosion(x, y, count) {
            for (let i = 0; i < count; i++) {
                const p = document.createElement('div');
                p.className = 'card-particle';
                p.innerHTML = symbols[Math.floor(Math.random() * symbols.length)];
                p.style.left = `${x}px`;
                p.style.top = `${y}px`;
                p.style.setProperty('--tx', `${(Math.random() - 0.5) * 400}px`);
                p.style.setProperty('--ty', `${(Math.random() - 0.5) * 400}px`);
                p.style.setProperty('--tr', `${(Math.random() - 0.5) * 1000}deg`);
                document.body.appendChild(p);
                setTimeout(() => p.remove(), 800);
            }
        }

        const audio = document.getElementById('bgTrack');
        function handleMusic() {
            if (audio.paused) { 
                audio.play(); 
                document.getElementById('musicControl').innerText = "THE TUNE IS MAD"; 
            } else { 
                audio.pause(); 
                document.getElementById('musicControl').innerText = "PLAY THE TWISTED TUNE"; 
            }
        }
    </script>
</body>
